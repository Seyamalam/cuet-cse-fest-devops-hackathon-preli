# =============================================================================
# Backend Development Dockerfile
# =============================================================================
# Optimized for hot reloading with volume-mounted source code
# Uses tsx watch for TypeScript execution without compilation step
# =============================================================================

FROM node:20-alpine

# Add labels
LABEL maintainer="hackathon-team"
LABEL description="E-commerce Backend Service - Development"
LABEL version="1.0.0-dev"

# Set NODE_ENV
ENV NODE_ENV=development

# Install useful development tools
RUN apk add --no-cache curl

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including devDependencies)
RUN npm ci

# Note: Source code will be volume-mounted, not copied
# This enables hot reloading when files change

# Expose the backend port
EXPOSE 3847

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:3847/api/health || exit 1

# Start with tsx watch for hot reloading
CMD ["npm", "run", "dev"]
