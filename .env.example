# =============================================================================
# Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in the values
# DO NOT commit the .env file with actual credentials
# =============================================================================

# -----------------------------------------------------------------------------
# MongoDB Root Credentials (for admin access)
# -----------------------------------------------------------------------------
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=change_me_to_secure_password

# -----------------------------------------------------------------------------
# MongoDB Application Credentials
# Used by the backend service to connect to MongoDB
# -----------------------------------------------------------------------------
MONGO_APP_USERNAME=app_user
MONGO_APP_PASSWORD=change_me_to_secure_app_password

# -----------------------------------------------------------------------------
# MongoDB Database Name
# -----------------------------------------------------------------------------
MONGO_DATABASE=ecommerce

# -----------------------------------------------------------------------------
# Service Ports (DO NOT CHANGE THESE VALUES)
# These ports are fixed per the hackathon requirements
# -----------------------------------------------------------------------------
BACKEND_PORT=3847
GATEWAY_PORT=5921

# -----------------------------------------------------------------------------
# Environment Mode
# Set to 'development' or 'production'
# -----------------------------------------------------------------------------
NODE_ENV=development

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# -----------------------------------------------------------------------------
# Sentry Error Tracking
# Get your DSN from https://sentry.io
# -----------------------------------------------------------------------------
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Prometheus Configuration
# -----------------------------------------------------------------------------
PROMETHEUS_PORT=9090

# -----------------------------------------------------------------------------
# Grafana Configuration
# -----------------------------------------------------------------------------
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_to_secure_password
GRAFANA_ROOT_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Alertmanager Configuration
# -----------------------------------------------------------------------------
ALERTMANAGER_PORT=9093
ALERT_EMAIL=admin@example.com
SLACK_WEBHOOK_URL=
ALERT_WEBHOOK_URL=

# =============================================================================
# LOGGING (ELK Stack)
# =============================================================================

# -----------------------------------------------------------------------------
# Elasticsearch Configuration
# -----------------------------------------------------------------------------
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URL=http://elasticsearch:9200

# -----------------------------------------------------------------------------
# Kibana Configuration
# -----------------------------------------------------------------------------
KIBANA_PORT=5601

# =============================================================================
# STORAGE (MinIO)
# =============================================================================

# -----------------------------------------------------------------------------
# MinIO S3-Compatible Storage
# -----------------------------------------------------------------------------
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=change_me_to_secure_password
MINIO_BUCKET=ecommerce
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false

# =============================================================================
# SMTP Configuration (for Alertmanager)
# =============================================================================
SMTP_HOST=smtp.example.com:587
SMTP_FROM=alertmanager@example.com
SMTP_USERNAME=
SMTP_PASSWORD=

# =============================================================================
# Notes:
# =============================================================================
# 1. The MONGO_URI is constructed automatically in docker-compose from:
#    mongodb://${MONGO_APP_USERNAME}:${MONGO_APP_PASSWORD}@mongo:27017/${MONGO_DATABASE}
#
# 2. The BACKEND_URL is set automatically in docker-compose:
#    http://backend:3847
#
# 3. For production, use strong passwords:
#    - At least 16 characters
#    - Mix of uppercase, lowercase, numbers, and special characters
#    - Consider using: openssl rand -base64 32
#
# 4. Security reminder:
#    - Never commit this file with real credentials
#    - Add .env to .gitignore
#    - Use different credentials for dev and prod
#
# 5. Service URLs (Internal Docker Network):
#    - Prometheus: http://prometheus:9090
#    - Grafana: http://grafana:3000
#    - Elasticsearch: http://elasticsearch:9200
#    - Kibana: http://kibana:5601
#    - MinIO API: http://minio:9000
#    - MinIO Console: http://minio:9001
# =============================================================================
